.row
  %nav.navbar.navbar-inverse
    .container
      .navbar-header= link_to 'Apabook', root_path, class: 'navbar-brand'
      .navbar-collapse.collapse.menu
        %ul.nav.navbar-nav
          / %li.dropdown
          /   %a.dropdown-toggle{ href: '#', role: 'button', 'data-toggle' => 'dropdown' }
          /     Apartments
          /     %span.caret
          /   %ul.dropdown-menu{ role: 'menu' }
          /     %li= link_to 'All', apartments_path
          %li{ class: active_class(apartments_path) }= link_to 'All apartments', apartments_path
          - if current_user && current_user.apartments?
            %li{ class: active_class(user_apartments_path) }= link_to 'Your apartments', user_apartments_path
        %ul.nav.navbar-nav.navbar-right.user
          - if current_user
            %li
              %p.navbar-text Hello #{current_user.first_name}!
            %li= link_to 'Logout', logout_path, method: :delete
          - else
            %li= link_to 'Login', login_path
            %li= link_to 'Register', register_path
