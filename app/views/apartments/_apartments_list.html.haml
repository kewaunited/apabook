%div{ class: 'apartments col-lg-9' }
  - @apartments.each do |apartment|
    %div{ class: 'apartment panel panel-default' }
      %div{ class: 'panel-body' }
        %img{ class: 'media-object col-lg-3', src: 'http://imageshack.com/a/img913/4462/NY1rib.jpg' }
        %div{ class: 'col-lg-6' }
          %p{ class: 'lead' }
            Apartment <strong>#{apartment.name}</strong><br />
            <small>#{apartment.address.street}, #{apartment.address.city}</small>
          %div{ class: 'row' }
            %div{ class: 'col-lg-4' }
              Bedrooms: <strong>#{apartment.bedroom_count}</strong>
            %div{ class: 'col-lg-4' }
              Bathrooms: <strong>#{apartment.bathroom_count}</strong>
            %div{ class: 'col-lg-4' }
              Guests: <strong>#{apartment.formatted_guests}</strong>
        %div{ class: 'col-lg-3' }
          %h2 #{apartment.day_price} PLN
          %a{ href: '#', class: 'btn btn-primary', role: 'button' } Book now
